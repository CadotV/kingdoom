{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "esnext",
    "sourceMap": true,
    "moduleResolution": "node",
    "strict": true,
    "jsx": "react",
    "jsxFactory": "h",
    "removeComments": true,
    "esModuleInterop": true,
    // "resolveJsonModule": false,
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["node_modules/@types", "node_modules/phaser/types", "custom_typings/*", "src/**/*"],
    "paths": {
      "@assets/*": ["src/assets/*"],
      "@scenes/*": ["src/scenes/*"],
      "@entities/*": ["src/entities/*"],
      "@config/*": ["src/config/*"],
      "@controls/*": ["src/controls/*"],
      "@ui/*": ["src/ui/*"],
      "@map/*": ["src/map/*"]
    }
  }
}
